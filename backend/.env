# Example .env for backend
# Flask/Backend config
PORT=5000
DEBUG=True
SECRET_KEY=your-secret-key
JWT_SECRET_KEY=your-jwt-secret

# Database config (PostgreSQL recommended)
DATABASE_URL=postgresql://postgres:1234@localhost:5432/attendance_db

# Uploads
UPLOAD_FOLDER=../uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg

# AI API Keys
OPENAI_API_KEY=
GEMINI_API_KEY=

# Face recognition
FACE_MATCH_THRESHOLD=0.5

# Liveness detection
LIVENESS_MODEL_PATH=../models/liveness.model

# Security
ENCRYPT_KEY=your-encrypt-key

# Logging
LOG_LEVEL=INFO
