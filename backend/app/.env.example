# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/face_attendance
DEV_DATABASE_URL=postgresql://username:password@localhost:5432/face_attendance_dev

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# Face Recognition Settings
FACE_RECOGNITION_THRESHOLD=0.5

# Liveness Detection Settings
LIVENESS_ENABLED=true
LIVENESS_EYE_AR_THRESH=0.25
LIVENESS_MIN_SCORE=0.6
LIVENESS_DEBUG=false

# Upload Settings
UPLOAD_FOLDER=../uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
ENCRYPT_KEY=your-encrypt-key
